LightGrey = rgb(58, 58, 58)
LightGreen = rgb(200, 240, 150)
LightRed = rgb(240,150,150)
Violet = rgb(120, 90, 180)
LightBlue = #4499ff


body 
  background-color LightGrey
  font-family "Arial", helvetica, sans-serif
  font-size 1em
  color LightGreen
  table-align center

  a 
    color LightBlue
  a:hover 
    color #0044aa
    border-bottom 0px
  h1,h2,h3,h4,h5,h6 
    color LightRed
  strong 
    color olivedrab
  pre, code
    color Violet

  .navigation 
    min-height 66px
    text-align center
    font-size 18px
    margin-bottom 2px
    border-bottom  1px solid rgb(70,70,70)
    padding-top 16px
    background-image  linear-gradient(to bottom, LightGrey, rgb(64,64,64))

    a 
      color rgb(230,230,230)
      text-decoration none
      margin-right 40px
      border-right 1px solid rgb(100,100,100)
      padding-bottom 2px
      border-bottom 2px solid rgb(100,100,100)


  #content 
    position relative
    width 70%
    min-width 1em
    height auto
    margin-left auto
    margin-right auto
    padding-left 8px
    padding-right 8px
    border-left  1px solid rgb(50,50,50)
    border-right  1px solid rgb(50,50,50)

    table
      img
        width 16px
        height 16px


    table.projectlist 
      margin-top 10px
      margin-bottom 10px
      margin-left auto; 
      margin-right auto

      p
        text-align top

      .projectrow td 
        border 2px solid transparent

      .screenshot img
        width  160px
        height 120px

  .bigblurb
    text-rendering: optimizelegibility
    font-size: 180%
    text-align: center



